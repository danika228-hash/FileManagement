<Window x:Class="FileManagementApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManagementApp.Views"
        xmlns:viewmodels="clr-namespace:FileManagementApp.ViewModels"
        xmlns:converters="clr-namespace:FileManagementApp.Converters"
        mc:Ignorable="d"
        Title="File Explorer" Height="450" Width="800">
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
    </Window.Resources>
    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Name="PathTextBox" Width="600" Margin="10" />
        <Button Content="Browse" Width="100" Margin="10" HorizontalAlignment="Right" 
                Command="{Binding LoadFileCommand}" CommandParameter="{Binding Text, ElementName=PathTextBox}" />
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <ListBox Name="FileListBox" ItemsSource="{Binding Files}" 
                     SelectedItem="{Binding SelectedFile}"
                     MouseDoubleClick="FileListBox_MouseDoubleClick">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" Foreground="{Binding Foreground}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Grid.Column="1">
                <StackPanel Visibility="{Binding SelectedFile.IsDirectory, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Contents:" FontWeight="Bold" />
                    <ListBox ItemsSource="{Binding DirectoryContents}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" Foreground="{Binding Foreground}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
                <StackPanel Visibility="{Binding SelectedFile.IsDirectory, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <TextBlock Text="Name:" FontWeight="Bold" />
                    <TextBlock Text="{Binding SelectedFileDetails.Name}" />
                    <TextBlock Text="Extension:" FontWeight="Bold" />
                    <TextBlock Text="{Binding SelectedFileDetails.Extension}" />
                    <TextBlock Text="Size:" FontWeight="Bold" />
                    <TextBlock Text="{Binding SelectedFileDetails.Size}" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>